datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Course {
  courseCode  String?
  courseName  String?
  createdAt   DateTime     @default(now())
  description String?
  endDate     DateTime?
  enrollments Enrollment[]
  id          String       @id @default(cuid())
  startDate   DateTime?
  updatedAt   DateTime     @updatedAt
}

model Instructor {
  createdAt DateTime @default(now())
  email     String?
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  updatedAt DateTime @updatedAt
}

model Enrollment {
  course         Course?   @relation(fields: [courseId], references: [id])
  courseId       String?
  createdAt      DateTime  @default(now())
  enrollmentDate DateTime?
  id             String    @id @default(cuid())
  student        Student?  @relation(fields: [studentId], references: [id])
  studentId      String?
  updatedAt      DateTime  @updatedAt
}

model Student {
  createdAt   DateTime     @default(now())
  dateOfBirth DateTime?
  email       String?
  enrollments Enrollment[]
  firstName   String?
  id          String       @id @default(cuid())
  lastName    String?
  updatedAt   DateTime     @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
